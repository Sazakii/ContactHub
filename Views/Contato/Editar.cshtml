@{
    ViewData["Title"] = "Editar Contatos";
}

<div class="editar-contato">
    <h2>Editar Contato</h2>

    <form action="">

        <div class="contato-info">
            <i class='bx bxs-user-circle'></i>

            <h3 class="hub">Nome</h3>
            <p>Nome do Contato</p>

            <h3 class="hub">Telefone</h3>
            <p>Telefone do Contato</p>
        </div>

        <label for="nome"><i class='bx bxs-user-circle'></i> Editar Nome do Contato:</label>
        <input type="text" name="" id="nome" placeholder="ex: Jonas">

        <label for="telefone"><i class='bx bxs-phone'></i> Editar Telefone:</label>
        <input type="text" name="" id="telefone" placeholder="(00)00000-0000">

        <p>Se o espaço estiver em branco, não haverá alterações nele.</p>

        <div class="edit-btns">
            <a role= "button" class="cancelar-btn" asp-controller="Contato" asp-action="Index">Cancelar</a>
            <input type="button" value="Editar Contato">
        </div>
    </form>
</div>
